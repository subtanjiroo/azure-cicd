<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_cms_div_6_people" model="ir.ui.view">
        <field name="name">cms.div6.people.form</field>
        <field name="model">cms.div6.people</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    
                    <group>
                        <field name="name"/>
                    </group>

                    <group col="12">
                        <group colspan="10">
                            <field name="position"/>
                            <field name="position_jp" invisible="not position_jp_toggle"/>
                        </group>
                        <group colspan="2">
                            <field name="position_jp_toggle"/>
                        </group>
                    </group>
                    <group col="12">
                        <group colspan="10">
                            <field name="text"/>
                            <field name="text_jp" invisible="not text_jp_toggle"/>
                        </group>
                        <group colspan="2">
                            <field name="text_jp_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="image" widget="image" options="{'accepted_file_extensions': '.png'}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo> 